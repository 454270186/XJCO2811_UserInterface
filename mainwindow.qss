
#lists QScrollBar::handle:horizontal {
    background: #9aa3ad;
    min-width: 30px; /* 适用于水平滚动条 */
    border-radius: 7px;
}

#lists QScrollBar::handle:horizontal:hover {
    background: #747b84;
}

#lists QScrollBar::sub-line:horizontal, QScrollBar::add-line:horizontal {
    border: none;
    background: none;
}

#lists QScrollBar::left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
    border: none;
    width: 0px;
    height: 0px;
    background: none;
}

#lists QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}



#thumbnailList QScrollBar::handle:vertical {
    background: #9aa3ad;
    min-height: 30px;
    border-radius: 7px;
}

#thumbnailList QScrollBar::handle:vertical:hover {
    background: #747b84;
}

#thumbnailList QScrollBar::sub-line:vertical, QScrollBar::add-line:vertical {
    border: none;
    background: none;
}

#thumbnailList QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: none;
    width: 0px;
    height: 0px;
    background: none;
}

#thumbnailList QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

