#thumbnailList QPushButton {
    width: 100px; 
    height: 100px; 
    border: none; 
    background-repeat: no-repeat; 
    background-position: center; 
    background-clip: content-box; 
}

QScrollArea#lists QPushButton{
    color: white; 
    border: 1px solid white;
    border-radius: 10px;
    font-weight: bold;
}

QScrollArea#lists QPushButton:checked {
    background-color: rgb(75, 77, 77);
    font-weight: bold;
    text-transform: uppercase;
    border: 2px solid #4aa1ff;
    border-radius: 10px;
}

QScrollArea#lists QPushButton:hover {
    background-color: rgb(75, 77, 77);
    border: 1px solid white;
    color: #F0F0F0;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 10px;
}



#thumbnailList QPushButton:pressed {
    border: 2px solid #4aa1ff; 
}
