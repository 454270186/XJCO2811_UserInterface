QScrollBar:vertical {
    width: 20px;  
    background: #4b729e;
}

QScrollBar::handle:vertical {
    background: #9aa3ad;
    min-height: 20px;  /* 滚动条手柄的最小高度 */
    border-radius: 7px;
}

QScrollBar::handle:vertical :hover {
    background: #747b84;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;  /* 移除上下按钮的边框 */
    background: none;  /* 移除上下按钮的背景 */
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: none;
    width: 0px;
    height: 0px;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;  /* 移除滚动条轨道的背景 */
}

QScrollArea#ShareArea QScrollBar {
    background: transparent;
    width: 10px;
    height: 8px;
}