QMainWindow {
    background-color: rgb(39, 40, 40);
    font:Arial 9pt;
    color: white;
}

.QScrollArea#ShareArea {
    border: none; /* Remove border from QScrollArea */
}

.QScrollArea#ShareArea > QWidget > QWidget {
    background-color: #333333; /* Dark grey background for scroll area contents */
}

.QGroupBox {
    border: 1px solid #555555; /* Optional: if you want to see the group box borders */
    margin-top: 1ex; /* Space above the group box */
}

.QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 3px 0 3px;
    background-color: #333333; /* Background color for group box title */
}

QDialog {
    background-color:  #333333;
    color: white; /* 白色文字 */
}

.QPushButton {
    background-color: rgb(39, 40, 40); 
    color: white;
    border: 1px solid #555555; /* Optional: if you want borders on your buttons */
}

.QLabel {
    color: white;
}

