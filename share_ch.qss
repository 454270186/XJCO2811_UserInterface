QMainWindow {
    background-color: rgb(10, 25, 47);
    font:Arial 9pt;
    color: white;
}

.QScrollArea {
    border: none; /* Remove border from QScrollArea */
}

.QScrollArea > QWidget > QWidget {
    background-color: rgb(28, 49, 84);
}

.QGroupBox {
    border: 1px solid #555555; 
    margin-top: 1ex; /* Space above the group box */
}

.QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 3px 0 3px;
    background-color:  rgb(10, 25, 47);
}

QDialog {
    background-color:  rgb(28, 49, 84);
    color: white; /* 白色文字 */
}

.QPushButton {
    background-color: rgb(28, 49, 84); 
    color: white;
    border: 1px solid #555555; /* Optional: if you want borders on your buttons */
}

.QLabel {
    color: white;
}

